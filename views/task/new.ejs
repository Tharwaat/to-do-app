<head>
    <title>New task!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="/task/new.css">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-10" >
                <div class="card">
                    <div class="card-body">
                        <form action="/tasks" method="POST">
                            <div class="form-group">
                                <label for="taskname">Enter task name:</label>
                                <input type="text" class="form-control" aria-describedby="emailHelp" placeholder="Enter name" name="task[name]">
                            </div>
                            <div class="form-group">
                                <label for="taskdesc">What you should do for this task?</label>
                                <input type="text" class="form-control" placeholder="A brief description" name="task[description]">
                            </div>
                            <div class="form-group">
                                <label for="taskdate">Due to:</label>
                                <input type="date" class="form-control" name="task[dueto]">
                            </div>
                            <div class="form-group">
                                <label for="taskpriority">set a priority for this task:</label>
                                <input type="number" class="form-control" placeholder="1 : 5" name="task[priority]" >
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>                
            </div>
        </div>
    </div>
</body>
